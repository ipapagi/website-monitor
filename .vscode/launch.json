{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Monitor - Continuous",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Save Baseline",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--save-baseline"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Compare with Baseline",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--compare"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - List Active",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--list-active"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Save Baseline & List",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--save-baseline", "--list-active"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Compare & List",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--compare", "--list-active"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Check Portal Incoming Applications ",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--check-incoming-portal"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Check Portal & Enrich All",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--check-incoming-portal", "--enrich-all"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Compare Applications Date Snapshot",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--compare-date", "${input:snapshotDate}"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Save All Baseline",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--save-all-baseline"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Compare All with Baseline",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--compare-all"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - List All Procedures",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--list-all"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Save All Baseline & List",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--save-all-baseline", "--list-all"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Compare All & List",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--compare-all", "--list-all"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Analyze Test (Date)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--analyze-test", "${input:snapshotDate}"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Monitor - Analyze Current",
            "type": "debugpy",
            "request": "launch",
            "module": "src.main",
            "args": ["--check-incoming-portal", "--analyze-current"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "snapshotDate",
            "type": "promptString",
            "description": "Ημερομηνία snapshot (YYYY-MM-DD)",
            "default": "2025-12-04"
        }
    ]
}