# Discord Webhook URL for notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Check interval in seconds (default: 300 = 5 minutes)
CHECK_INTERVAL=300

# PKM Login Credentials
# Αντίγραψε αυτό το αρχείο σε .env και συμπλήρωσε τα credentials
PKM_USERNAME=your_username_here
PKM_PASSWORD=your_password_here

# Email Configuration
EMAIL_ADDRESS=pkm-pb@rcm.gov.gr
EMAIL_PASSWORD=your_encrypted_password_here
EMAIL_SMTP_SERVER=mailsmtp.rcm.gov.ar
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_NOTIFICATIONS_ENABLED=true

# PKM Portal Credentials
PKM_USERNAME=your_username
PKM_PASSWORD=your_password

# Optional: Custom admins file path
# ADMINS_FILE=data/admins.json
